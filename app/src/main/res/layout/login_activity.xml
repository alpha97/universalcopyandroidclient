<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@android:drawable/arrow_up_float"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_activity_dummy_branding"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universal Copy Paste"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/widget_edittext_dark"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_activity_dummy_branding"
        android:id="@+id/login_activity_dummy_branding_text"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email-Id"
        android:drawableLeft="@android:drawable/ic_btn_speak_now"
        android:textColor="@android:color/widget_edittext_dark"
        android:id="@+id/login_activity_email"
        android:textAlignment="center"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_activity_dummy_branding_text"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="22dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:textColor="@color/colorPrimary"
        android:id="@+id/login_activity_password"
        android:hint=" Password"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_activity_email"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/login_activity_email"
        android:layout_alignStart="@+id/login_activity_email" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/primary_text_dark"
        android:id="@+id/login_activity_login_button"
        android:layout_below="@+id/login_activity_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/login_activity_password"
        android:layout_height="wrap_content"
        android:id="@+id/login_activity_forget_pwd_text"
        android:text="Forgot Your Password??Click here"/>



</RelativeLayout>